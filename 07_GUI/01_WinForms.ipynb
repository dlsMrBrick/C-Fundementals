   "source": [
    "# GUI Development with Windows Forms\n",
    "\n",
    "## Exercise 1: Simple Calculator\n",
    "Create a basic calculator application with a graphical user interface."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "source": [
    "using System.Windows.Forms;\n",
    "\n",
    "public class Calculator : Form\n",
    "{\n",
    "    private TextBox display;\n",
    "    private Button[] numberButtons;\n",
    "    private Button addButton;\n",
    "    private Button equalsButton;\n",
    "    private double result = 0;\n",
    "    private string operation = \"\";\n",
    "\n",
    "    public Calculator()\n",
    "    {\n",
    "        Text = \"Simple Calculator\";\n",
    "        Size = new Size(300, 400);\n",
    "\n",
    "        display = new TextBox\n",
    "        {\n",
    "            Location = new Point(10, 10),\n",
    "            Size = new Size(260, 30),\n",
    "            TextAlign = HorizontalAlignment.Right\n",
    "        };\n",
    "\n",
    "        numberButtons = new Button[10];\n",
    "        for (int i = 0; i < 10; i++)\n",
    "        {\n",
    "            numberButtons[i] = new Button\n",
    "            {\n",
    "                Text = i.ToString(),\n",
    "                Size = new Size(80, 40),\n",
    "                Location = new Point(10 + (i % 3) * 90, 50 + (i / 3) * 50)\n",
    "            };\n",
    "            numberButtons[i].Click += (s, e) => display.Text += ((Button)s).Text;\n",
    "            Controls.Add(numberButtons[i]);\n",
    "        }\n",
    "\n",
    "        addButton = new Button\n",
    "        {\n",
    "            Text = \"+\",\n",
    "            Size = new Size(80, 40),\n",
    "            Location = new Point(190, 200)\n",
    "        };\n",
    "        addButton.Click += (s, e) =>\n",
    "        {\n",
    "            result = double.Parse(display.Text);\n",
    "            operation = \"+\";\n",
    "            display.Clear();\n",
    "        };\n",
    "\n",
    "        equalsButton = new Button\n",
    "        {\n",
    "            Text = \"=\",\n",
    "            Size = new Size(80, 40),\n",
    "            Location = new Point(190, 250)\n",
    "        };\n",
    "        equalsButton.Click += (s, e) =>\n",
    "        {\n",
    "            if (operation == \"+\")\n",
    "            {\n",
    "                result += double.Parse(display.Text);\n",
    "                display.Text = result.ToString();\n",
    "            }\n",
    "        };\n",
    "\n",
    "        Controls.Add(display);\n",
    "        Controls.Add(addButton);\n",
    "        Controls.Add(equalsButton);\n",
    "    }\n",
    "}\n",
    "\n",
    "Application.Run(new Calculator());"
   ]
  }
 ],
